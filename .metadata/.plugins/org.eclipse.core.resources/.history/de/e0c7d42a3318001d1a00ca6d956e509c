/* Dropdown baseado em W3Schools- https://www.w3schools.com/css/css_dropdowns.asp */
/* Usado para posicionar o conteúdo dropdown */
.dropdown{
	position: relative;
	display: inline-block;
}

/* Conteúdo Dropdown (oculto por padrão) */
.dropdown-content{
	display: none;
	position: absolute;
	background-color: #005f89;
	z-index: 1;
	width: 100%;
}
/* Links dentro do dropdown */
.dropdown-content a{
	display: block;
}

/* Mudar cor dos links dropdown ao passar mouse */
.dropdown-content a:hover{
	background-color: #83afd3;
}

/* Mostrar o menu dropdown menu ao passar mouse */
.dropdown:hover .dropdown-content{
	display: block;
}

